@model UsuarioViewModel


<div class="mt-5">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <img src="~/img/marcas_alvorada_prancheta 1.png" style="max-width: 250px;"/>
                        <h5 class="card-title">Acesso ao Sistema</h5>
                        <p>Informe seus dados de acesso</p>
                    </div>
                    <hr />
                    <form asp-action="Login">
                        <label asp-for="Login" class="control-label"></label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                        <br />

                        <label asp-for="Senha" class="control-label"></label>
                        <input type="password" asp-for="Senha" class="form-control" />
                        <span asp-validation-for="Senha" class="text-danger"></span>

                        <div class="d-grid mt-3">
                            <input type="submit" value="Acessar" class="btn btn-dark" />
                        </div>

                        <div class="d-grid mt-3">
                            <a href="/Login/Register" class="btn btn-light">Criar uma conta</a>
                        </div>
                    </form>                   
                </div>
            </div>
        </div>
    </div>
</div>