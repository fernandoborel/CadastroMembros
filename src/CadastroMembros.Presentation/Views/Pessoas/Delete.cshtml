@model PessoaViewModel

@{
    ViewData["Title"] = "Deletar Membro";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<h3>Tem certeza que deseja deletar o membro (@Model.Nome)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    <br /><br />
    <form asp-action="DeleteConfirmed" class="class=" d-grid gap-2">
        <input type="hidden" asp-for="Id" />
        <div class="d-grid gap-2">
            <input type="submit" value="Apagar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Voltar</a>
        </div>
    </form>
</div>