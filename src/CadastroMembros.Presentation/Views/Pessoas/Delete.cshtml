@model PessoaViewModel

@{
    ViewData["Title"] = "Deletar Membro";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<h3>Tem certeza que deseja deletar o membro (@Model.Nome)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    <br /><br />
    <form asp-action="DeleteConfirmed" class="class=" d-grid gap-2">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-info text-white">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
