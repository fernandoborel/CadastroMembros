@using CadastroMembros.Domain.Enums;
@model PessoaViewModel

<input type="hidden" asp-for="Id" />

<div class="row mb-3 d-flex justify-content-center imgLogoIba">
    <img src="~/img/logo_iba.png" />
</div>

<br/>
<div class="row mb-3">
    <div class="col-md-6">
        <p class="lead pLabel">Nome: <span>@Model.Nome</span></p>
    </div>
    <div class="col-md-6">
        <p class="lead pLabel">E-mail: <span>@Model.Email</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">CPF: <span>@Model.Cpf</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Sexo: <span>@Model.Sexo</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Estado Civil: <span>@Model.EstadoCivil (a)</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Data de Nascimento: <span>@Model.DataNascimento</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Empresa: <span>@Model.OndeTrabalha</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Cargo: <span>@Model.Cargo</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">País: <span>@Model.Pais</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Estado: <span>@Model.Estado</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Cidade: <span>@Model.Cidade</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">CEP: <span>@Model.Cep</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Logradouro: <span>@Model.Logradouro</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">N°: <span>@Model.Numero</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Complemento: <span>@Model.Complemento</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Bairro: <span>@Model.Bairro</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">(21) <span>@Model.Telefone</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Vínculo: <span>@Model.Vinculo</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Ministério: <span>@Model.Ministerio</span></p>
    </div>
    <div class="form-group col-md-4">
        <p class="lead pLabel">Data de cadastro: <span>@Model.DataCadastro</span></p>
    </div>
    <div class="form-group membroAtivo">
        @if(Model.Ativo == true)
        {
            <p class="lead">Ativo: <span class="text-success">Sim</span></p>
        }
        else
        {
            <p class="lead">Ativo: <span class="text-danger">Não</span></p>
        }
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index" class="btn btn-primary  btnImprimir">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-square" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm11.5 5.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg> Voltar
    </a>
    <button class="btn btn-warning btnImprimir" onclick="imprimirPagina()">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-printer" viewBox="0 0 16 16">
            <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z" />
            <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z" />
        </svg> Imprimir
    </button>
</div>